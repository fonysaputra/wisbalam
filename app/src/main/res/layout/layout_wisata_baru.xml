<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0da4ee"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/ic_today"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tv_tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toLeftOf="@+id/imageView4"
                android:layout_toStartOf="@+id/imageView4"
                android:text=""
                android:textColor="#fff" />

            <EditText
                android:id="@+id/edlongitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView7"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:ems="10"
                android:hint="longitude"
                android:inputType="textPersonName"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView4"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="5dp"
                android:text="Longitude"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edlongitude"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Latitude"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/edlatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView8"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"

                android:ems="10"
                android:hint="latitude"
                android:inputType="textPersonName"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edlatitude"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Nama Wisata"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/ednamawisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView9"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:ems="10"
                android:hint="Nama Wisata"
                android:inputType="textPersonName"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ednamawisata"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Alamat Wisata"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/edalamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView11"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:ems="10"
                android:textColor="#fff"
                android:hint="Alamat Wisata"
                android:inputType="text|textMultiLine"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edalamat"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Kecamatan"
                android:textColor="#fff" />

            <Spinner
                android:id="@+id/spkeamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView12"

                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spkeamatan"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Tipe Wisata"
                android:textColor="#fff" />

            <Spinner
                android:id="@+id/sptipewisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView13"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sptipewisata"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Biaya Masuk"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/edbiaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView14"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:ems="10"
                android:hint="Biaya Masuk"
                android:inputType="number"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edbiaya"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Fasilitas"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/edfasilitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView15"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:ems="10"
                android:hint="Fasilitas"
                android:inputType="text|textMultiLine"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edfasilitas"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Kirim Email"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/edemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView16"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:editable="true"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="admin@gmail.com"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edemail"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Deskripsi"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/eddeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView17"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:ems="10"
                android:hint="Deskripsi"
                android:inputType="textMultiLine"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/eddeskripsi"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Foto"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/imagephoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView18"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/ic_camera"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imgviewphoto"
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_below="@+id/textView18"
                android:layout_toEndOf="@+id/textView8"
                android:text=""
                android:layout_toRightOf="@+id/textView8" />

            <Button
                android:id="@+id/btn_upload"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imgviewphoto"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:text="Simpan" />

            <Button
                android:id="@+id/btn_reset"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView9"
                android:text="Reset"
                android:layout_toRightOf="@+id/textView9" />

            <Button
                android:id="@+id/btn_tambahfoto"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgviewphoto"
                android:layout_toEndOf="@+id/imgviewphoto"

                android:text="Tambah Foto"
                android:layout_toRightOf="@+id/imgviewphoto" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>

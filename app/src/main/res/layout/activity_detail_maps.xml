<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail_list_apotik"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
             />
        <TextView
            android:id="@+id/tvNm_rs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Aksi"
            android:textSize="20sp" />
        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="298dp" />

        <Button
            android:id="@+id/btn_lihatPeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Jalur" />
        <Button
            android:id="@+id/btn_hubungi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hubungi Penjual" />
    </LinearLayout>
</ScrollView>

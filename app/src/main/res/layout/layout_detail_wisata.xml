<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#5296f2"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear1"
        android:layout_height="200dp">
        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >

        </android.support.v4.view.ViewPager>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/linear1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrich"
            android:text="Detail Informasi Wisata"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="39dp"
            android:text="Nama Wisata :"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView10"
            android:layout_toEndOf="@+id/textView28"
            android:layout_toRightOf="@+id/textView28"
            android:text="-"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/txt_nama"
            android:layout_marginTop="10dp"
            android:text="Alamat :"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nama"
            android:layout_alignStart="@+id/txt_nama"
            android:layout_below="@+id/txt_nama"
            android:layout_marginTop="10dp"
            android:text="-"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/txt_alamat"
            android:layout_marginTop="10dp"
            android:text="Kecamatan :"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_kecamatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nama"
            android:layout_alignStart="@+id/txt_nama"
            android:layout_below="@+id/txt_alamat"
            android:layout_marginTop="10dp"
            android:text="-"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView22"
            android:layout_marginTop="10dp"
            android:text="Tipe Wisata :"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_tipe_wisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nama"
            android:layout_alignStart="@+id/txt_nama"
            android:layout_below="@+id/txt_kecamatan"
            android:layout_marginTop="10dp"
            android:text="-"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/txt_tipe_wisata"
            android:layout_marginTop="10dp"
            android:text="Biaya Masuk :"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_biaya_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nama"
            android:layout_alignStart="@+id/txt_nama"
            android:layout_below="@+id/txt_tipe_wisata"
            android:layout_marginTop="10dp"
            android:text="-"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView26"
            android:layout_marginTop="10dp"
            android:text="Fasilitas Wisata : "
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_fasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nama"
            android:layout_alignStart="@+id/txt_nama"
            android:layout_below="@+id/txt_biaya_masuk"
            android:layout_marginTop="10dp"
            android:text="-"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView28"
            android:layout_alignStart="@+id/textView28"
            android:layout_below="@+id/txt_fasilitas"
            android:layout_marginTop="10dp"
            android:text="Deskripsi Wisata : "
            android:textColor="#000" />




        <TextView
            android:id="@+id/txt_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_fasilitas"
            android:layout_alignStart="@+id/txt_fasilitas"
            android:layout_below="@+id/txt_fasilitas"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="-"
            android:textColor="#000" />



        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:layout_below="@+id/txt_deskripsi"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="270dp"
            android:layout_marginTop="30dp"
            android:layout_height="180dp"
            tools:context="com.wisbalam.server.list.detail_wisata" />

        <Button
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/ig"
            android:layout_alignTop="@+id/map"
            android:background="#5296f2"
            android:drawableTop="@drawable/fb"
            android:text="Facebook"
            android:layout_alignLeft="@+id/ig" />

        <Button
            android:id="@+id/ig"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/map"
            android:layout_toRightOf="@+id/map"
            android:background="#5296f2"
            android:drawableTop="@drawable/wa"
            android:text="Whatsapp" />

        <TextView
            android:id="@+id/txt_bagikan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/map"
            android:layout_alignEnd="@+id/fb"

            android:layout_alignRight="@+id/fb"
            android:layout_marginBottom="-20dp"
            android:fontFamily="@font/aldrich"
            android:text="Bagikan Ke"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>
    </ScrollView>
</LinearLayout>

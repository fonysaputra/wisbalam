<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bantuan"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DB0BB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wisbalam.server.Bantuan"
    android:weightSum="1">



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="29dp"
        android:text="WISATA BANDAR LAMPUNG"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:padding="10dp"
        android:text="1. Menu Lihat Peta : Yaitu sebuah menu untuk menampilkan titik lokasi wisata di bandar lampung"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />

    <TextView
        android:padding="10dp"
        android:text="2. Maneu Tambah Wisata : Yaitu menu untuk menambahkan lokasi wisata yang ada di lokasi  bandarlampung"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:layout_below="@+id/textView1"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <TextView
        android:padding="10dp"
        android:text="3. Menu Bantuan Aplikasi : Menu untuk menampilkan fungsi tombol aplikasi"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:layout_below="@+id/textView2"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />
    <TextView
        android:padding="10dp"
        android:text="4. Menu Tentang Kami : Menu Untuk Menampilkan Informasi Aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:textColor="#fff"
        android:id="@+id/textView3" />
    <TextView
        android:padding="10dp"
        android:text="5. Menu Keluar Aplikasi : Menu Untuk Keluar Dari Aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_below="@+id/textView3"
        android:id="@+id/textView4" />
    <TextView
        android:padding="10dp"
        android:text="6. Menu Wisata Sejarah Dan Religi : Untuk Menampilkan List/Daftar Wisata Sejarah Atau Religi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_below="@+id/textView4"
        android:id="@+id/textView5" />

            <TextView
                android:padding="10dp"
                android:text="7. Menu Wisata Cagar Alam / Alam : Untuk Menampilkan List/Daftar Wisata Cagar Alam Atau Alam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_below="@+id/textView5"
                android:id="@+id/textView7" />
            <TextView
                android:padding="10dp"
                android:text="8. Menu Wisata Bahari / Laut : Untuk Menampilkan List/Daftar Wisata Bahari / Laut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_below="@+id/textView7"
                android:id="@+id/textView8" />
            <TextView
                android:padding="10dp"
                android:text="9. Menu Wisata Belanja : Untuk Menampilkan List/Daftar Wisata Belanja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_below="@+id/textView8"
                android:id="@+id/textView9" />

            <TextView
                android:padding="10dp"
                android:text="10. Menu Wisata Kuliner : Untuk Menampilkan List/Daftar Wisata Kuliner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_below="@+id/textView9"
                android:id="@+id/textView10" />
        </RelativeLayout></ScrollView>
</LinearLayout>
